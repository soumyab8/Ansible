[Unit]
Description = User Service
[Service]
User=roboshop
Environment=MONGO=true
Environment=REDIS_HOST=redis-{{ENV}}.b49.roboshop.internal
Environment=MONGO_URL="mongodb://mongodb-{{ENV}}.b49.roboshop.internal:27017/users"
ExecStart=/bin/node /home/roboshop/user/server.js
SyslogIdentifier=user

[Install]
WantedBy=multi-user.target